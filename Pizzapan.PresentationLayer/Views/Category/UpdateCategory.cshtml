@model Pizzapan.EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="CategoryID" />
    <input type="text" class="form-control" asp-for="CategoryName" style="background-color:lightgray" />
    <br />
    <button class="btn btn-primary" style="background-color:gray">Güncelle</button>
</form>

